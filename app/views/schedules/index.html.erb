<div class="row">
  <div class="medium-12 columns">
    <h2>Your Schedule</h2>
    <div class="row">
      <% # noinspection RubyStringKeysInHashInspection
         day_remap = {
          'Sunday' => 'U',
          'Monday' => 'M',
          'Tuesday' => 'T',
          'Wednesday' => 'W',
          'Thursday' => 'R',
          'Friday' => 'F',
          'Saturday' => 'S'
      }
      if @schedule.nil?
      %>
      <h3 class="medium-8 columns medium-centered">Looks empty...<%= link_to 'Click here to generate a new one!', wizard_path(:course_load) %></h3>
      <% else %>
        <% Date::DAYNAMES.each do |day| %>
          <% if day != 'Saturday' and day != 'Sunday' %>
            <div class="medium-2 offset-2 columns space" align="center">
              <%= day %>
              <% @schedule.sections.order(start_time: :asc).each do |section| %>
                <% unless section.rpt_pattern.index(day_remap[day]).nil? %>
                  <span class="label block">
                    <%= section.course.instructional_unit + ' ' + section.course.course_number %>
                    <br/>
                    <%= section.location.name + ' ' + section.room %>
                    <br />
                    <%= section.person.name %>
                  </span>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <div class="medium-2 offset-2 columns space" align="center">Saturday/Sunday</div>
      <% end %>
    </div>
  </div>
</div>
<% unless @schedule.nil? %>
  <div class="row">
    <div class="medium-12 columns">
      <div id="map"></div>
      <script type="text/javascript">
        var map = L.map('map').setView([39.9833, -82.9833], 13);
        L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
          attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, <a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="http://mapbox.com">Mapbox</a>',
          maxZoom: 18
        }).addTo(map);

        var dir = MQ.routing.directions();

        dir.route({
          location
           <% @schedule.sections.order(start_time: :asc).each do |section| %>s: [
            { latLng: { l<%= section.location.lonlat.y %>1984, l<%= section.location.lonlat.x %>6046
           <% end %> } }
          ],
          options: {routeType:'pedestrian'}
        });

        map.addLayer(MQ.routing.routeLayer({
          directions: dir,
          fitBounds: true,
          ribbonOptions: {
            ribbonDisplay: { color: '#00FF00', opacity: 0.3 }
          }
        }));
      </script>
    </div>
  </div>
<% end %>